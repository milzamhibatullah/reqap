<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="vertical">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/circle_indigo"
                   android:padding="6dp"
                   tools:src="@drawable/ic_add_white"
                   android:layout_gravity="center_horizontal"
                   android:id="@+id/imgItem"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvItem" android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp" android:layout_marginTop="4dp"
                tools:text="Rumah Tangga"
                android:textColor="@color/bottom_menu_uncheck" android:fontFamily="@font/roboto_light"/>
    </LinearLayout>
</layout>
